<% for(var i=0;i<users.length;i++){ %>
<tr>
    <td><%= i+1 %></td>
    <td><%= users[i].name %></td>
    <td><%= users[i].email %></td>
    <td><%= users[i].department %></td>
    <td><%= users[i].salary %></td>
    <td><a href="/update-user?id=<%=users[i]._id%>" class="btn border-shadow update"><span class="text-gradient">EDIT</span></a></td>
    <td><a class="btn border-shadow delete" data-id="<%=users[i]._id%>"><span class="text-gradient">DELETE</span></a></td>
</tr>
<% } %>
